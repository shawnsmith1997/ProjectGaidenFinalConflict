            <string>//Key Event Listeners
if(AllowInteraction){
    //Select
    if (keyboard_check_pressed(global.SelectButton)){
        //We selected 'Member'
        if(MenuAnimTop = -1){
            PerformEvent = 'Top';
            PanDirection = 'right';
            AllowInteraction = false;
            sound_play(MenuPanSound);
        }
        //We selected 'Magic'
        else if(MenuAnimLeft = -1){
            AllowInteraction = false;
            DialogueState = 0;
            PerformEvent = 'Left';
            event_perform(ev_other,ev_user15);
        }
        //We selected 'Item'
        else if(MenuAnimRight = -1){
            PerformEvent = 'Right'
            PanDirection = 'right';
            AllowInteraction = false;
            sound_play(MenuPanSound);
        }
        //We selected 'Search'
        else if(MenuAnimBottom = -1){
            AllowInteraction = false;
            DialogueState = 0;
            PerformEvent = 'Bottom';
            event_perform(ev_other,ev_user15);
        }
    }
    
    //Back
    else if (keyboard_check_pressed(global.BackButton)){
        sound_play(MenuPanSound);
        PerformEvent = 'BackOut';
        AllowInteraction = false;
        PanDirection = 'down';
    }
    
    //Left
    else if (keyboard_check_pressed(global.LeftButton)){
        MenuAnimTop = 0;
        MenuAnimBottom = 0;
        MenuAnimLeft = -1;
        MenuAnimRight = 0;
        sound_play(MenuMoveSound);
    }
    
    //Right
